<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <!-- 네모난 큰 박스 -->

    <include
        android:id="@+id/tb_frag3"
        layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_frag3"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:background="#FAE0D4"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 이미지뷰와 텍스트 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- 이미지뷰 -->

            <!-- 이름, 성별, 나이 텍스트뷰 레이아웃 -->
            <ImageView
                android:id="@+id/my_image_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/my_image" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:orientation="vertical">

                <!-- 이름 텍스트뷰 -->
                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:text="이름: John Doe"
                    android:textSize="18sp" />

                <!-- 성별 텍스트뷰 -->

                <!-- 나이 텍스트뷰 -->
                <TextView
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:text="자기 소개 : "
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>


        <!-- 버튼들 -->
        <Button
            android:id="@+id/viewMyPostsButton"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_button"
            android:text="내가 쓴 글 모아보기"
            android:textColor="#008000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_button"
            android:text="내가 별표한 글 모아보기"
            android:textColor="#008000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_button"
            android:text="내 정보 보기"
            android:textColor="#008000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 프로필 사진 변경 버튼 -->
        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_button"
            android:text="프로필 사진 변경"
            android:textColor="#008000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 비밀번호 변경 버튼 -->
        <Button
            android:id="@+id/btn_changePassword"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_button"
            android:text="비밀번호 변경"
            android:textColor="#008000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 계정 삭제 버튼 -->
        <Button
            android:id="@+id/btn_deleteAcc"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_button"
            android:text="계정 삭제"
            android:textColor="#008000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 로그아웃 버튼 -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_button"
            android:text="로그아웃"
            android:textColor="#008000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>
